<div class="row">
    <div class="col-md-6">
        <h3>Sales Proposals</h3>
    </div>
    <div class="col-md-6">
        <h3><%= link_to 'Create New Lead', new_sales_proposal_path, class: "btn btn-info pull-right" %></h3>
    </div>
</div>


<div class="box box-default">
    <!-- /.box-header -->
        <table class='table'>
            <thead>
                <tr>
                <div class="col-md-2">
                    <th>Lead</th>
                </div>
                <div class="col-md-2">
                    <th>Architect</th>
                </div>
                <div class="col-md-2">
                    <th>Quoted</th>
                </div>
                <div class="col-md-2">
                    <th>Product</th>
                </div>
                <div class="col-md-2">
                    <th>Won / Lost</th>
                </div>
                <div class="col-md-2">
                    <th>Actions</th>
                </div>
                </tr>
            </thead>
            <tbody>
                    <% @sales_proposals.each do |sales_proposal| %>
                    <tr>
                        <td class="col-md-2"><%= sales_proposal.lead_name %></td>
                        <td class="col-md-2"><%= sales_proposal.architect_name %></td>
                        <td class="col-md-2"><%= sales_proposal.state %></td>
                        <td class="col-md-2"><%= sales_proposal.product %></td>
                        <td class="col-md-2"><%= sales_proposal.status %></td>


                        <td class="col-md-2"><%= link_to('Show', sales_proposal, class: "btn btn-success") %> |
                        <%= link_to('Delete', sales_proposal, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure, you want to delete this lead?'}) %></td>
                    </tr>
                    <% end %>
            </tbody>
        </table>
    <!-- /.box-body -->
</div>